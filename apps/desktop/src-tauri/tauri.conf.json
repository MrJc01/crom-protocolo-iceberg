{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Iceberg",
  "version": "0.1.0",
  "identifier": "com.iceberg.app",
  "build": {
    "beforeDevCommand": "cd ../../packages/web-client && npm run dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "cd ../../packages/web-client && npm run build",
    "frontendDist": "../../packages/web-client/.next"
  },
  "app": {
    "windows": [
      {
        "title": "Iceberg - Protocolo de Conhecimento Descentralizado",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  }
}
